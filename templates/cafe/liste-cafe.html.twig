{% extends 'base.html.twig' %}
{% block title %}{{parent()}}Liste des types de café{% endblock %}
{% block body %}
<div class="container-fluid">
    <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
        Liste des types de <i class="bi bi-cup-hot-fill"></i></h1>
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr class="fw-bold text-primary">
                            <th scope="col">Désignation</th>
                            <th scope="col">Origine</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for type in typecafes |sort((a, b) => a.designation <=> b.designation) %}
                            <tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
                                <td>{{ type.designation | capitalize }}</td>
                                <td>{{ type.origine | upper }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
